<Window x:Class="TravelHealthGuide.Views.DiseaseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelHealthGuide.Views"
        mc:Ignorable="d"
        Title="DiseaseInfoWindow" Height="450" Width="800">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="1">
                    
                    <Grid x:Name="HeaderContainer">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ElementName=HeaderContainer, Path=ActualHeight}"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="{Binding ElementName=HeaderContainer, Path=ActualHeight}"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="1" HorizontalAlignment="Center" Content="Switzerland" FontWeight="Bold" FontSize="24"/>
                        
                    </Grid>
                    
                    <Label HorizontalAlignment="Center" Content="Here is what you need to know before visiting."/>
                    
                </StackPanel>
                
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
